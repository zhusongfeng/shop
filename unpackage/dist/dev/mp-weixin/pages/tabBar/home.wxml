<view class="content"><view class="real-time-data"><view class="real-time"><text class="title">成交客户（人）</text><text class="number">{{salesToday.user_total}}</text></view><view class="real-time"><text class="title">今日销量（件）</text><text class="number">{{salesToday.goods_total}}</text></view><view class="real-time"><text class="title">今日成交额（元）</text><text class="number">{{salesToday.money_total}}</text></view></view><view class="navbar"><block wx:for="{{navList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['tabClick',['navbar',index]]]]]}}" class="{{['nav-item',(tabCurrentIndex==index)?'current':'']}}" bindtap="__e">{{''+item.text+''}}</view></block></view><view class="sort"><block wx:for="{{orderbyList}}" wx:for-item="target" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['select',[index]]]]]}}" class="{{['target',target.selected?'on':'']}}" bindtap="__e">{{''+target.text+''}}<block wx:if="{{target.orderbyicon}}"><view class="{{['icon',target.orderbyicon[target.orderby]]}}"></view></block></view></block></view><swiper class="swiper-box" current="{{tabCurrentIndex}}"><block wx:for="{{navList}}" wx:for-item="tabItem" wx:for-index="tabIndex" wx:key="tabIndex"><swiper-item class="tab-content" catchtouchmove="stopTouchMove"><scroll-view class="list-scroll-content swiper-no-swiping" scroll-y data-event-opts="{{[['scrolltolower',[['loadMore',['$event']]]]]}}" bindscrolltolower="__e"><block wx:if="{{goodsList.length===0}}"><empty vue-id="{{'1-'+tabIndex}}" bind:__l="__l"></empty></block><block wx:for="{{goodsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['goodsDetail',['$0'],[[['goodsList','',index,'goods_id']]]]]]]}}" class="goods-list" bindtap="__e"><view class="goods-list-item"><image class="goods-img" src="{{item.images}}" mode="aspectFill"></image><view class="goods-right"><text class="title">{{item.goods_name}}</text><text class="price">{{"￥"+item.goods_price}}</text><view class="container"><view class="sales-actual">总销量<text class="number">{{item.goods_sales}}</text></view><view class="stock">库存<text class="number">{{item.stock_num}}</text></view></view><view class="time">添加时<text class="number">{{item.createtime}}</text></view></view></view></view></block><uni-load-more vue-id="{{'2-'+tabIndex}}" status="{{loadingType}}" bind:__l="__l"></uni-load-more></scroll-view></swiper-item></block></swiper><view class="tab-bar"><block wx:for="{{tabList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['addClick',[index]]]]]}}" class="tab-item" bindtap="__e">{{''+item.text+''}}</view></block></view></view>